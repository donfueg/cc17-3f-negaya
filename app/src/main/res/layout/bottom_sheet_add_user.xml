<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Input for Name -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"/>

    <!-- Input for Mobile Number -->
    <EditText
        android:id="@+id/inputMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:inputType="phone"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"/>

    <!-- Add User Button -->
    <Button
        android:id="@+id/bottomSheetAddUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Main User Info Text -->
    <TextView
        android:id="@+id/mainUserInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main user info will appear here"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="12dp" />

    <!-- Scrollable User List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/bottomUserListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Sample User Row with 3 columns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <!-- Live Heart Rate -->
                <TextView
                    android:id="@+id/userLiveHeartRateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="80 bpm"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center" />

                <!-- Last Updated Heart Rate -->
                <TextView
                    android:id="@+id/userLastUpdatedHeartRateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="75 bpm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
